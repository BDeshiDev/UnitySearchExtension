.title {
    font-size: 80px;
    margin-top: 0;
    margin-bottom: 10px;
}

.button-main {
    width: auto;
    background-color: rgb(0, 181, 255);
}

.button-main:hover {
    -unity-background-image-tint-color: rgb(0, 255, 30);
}

.button-main:active {
    -unity-background-image-tint-color: rgb(255, 221, 16);
}

.button-test {
    height: 100%;
    width: 20%;
    -unity-background-image-tint-color: rgb(255, 25, 25);
    font-size: 20px;
}

.button-test:active {
    height: 100%;
    width: 20%;
    -unity-background-image-tint-color: rgb(255, 234, 0);
    scale: 1.1 1.1;
    background-color: rgb(255, 255, 255);
}
